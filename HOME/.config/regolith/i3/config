set $internal eDP-1
set $external HDMI-1 

workspace $ws1 output $internal
workspace $ws2 output $external
workspace $ws9 output $internal

# change gaps interactively
bindsym $mod+Shift+o exec i3-msg move workspace to output $external
bindsym $mod+Shift+i move workspace to output $internal

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

hide_edge_borders smart

# start a terminal
bindsym $mod+Return exec /usr/bin/alacritty

# start a web browser
bindsym $mod+F2 exec /usr/bin/firefox

# file browser
bindsym $mod+F3 exec /usr/bin/nautilus

# headphones! F10 has a bluetooth icon on it
bindsym $mod+F10 exec /home/radoslaw/Code/shell/connect_to_my_sweet_sweet_headphones.sh
bindsym $mod+Shift+F10 exec /home/radoslaw/Code/shell/disconnect_from_my_sweet_sweet_headphones.sh

# experimenting
bindsym $mod+F12 exec /home/radoslaw/Code/shell/notify.sh

# quasi-Fibonacci tiling
